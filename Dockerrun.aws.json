{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "php-app",
      "host": {
        "sourcePath": "/var/app/current/"
      }
    },
    {
      "name": "apache",
      "host": {
        "sourcePath": "/var/app/current/vhosts"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "php-app",
      "image": "rtancman/php:php53-apache22",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8000,
          "containerPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "php-app",
          "containerPath": "/var/www/html",
          "readOnly": false
        },
        {
          "sourceVolume": "apache",
          "containerPath": "/etc/apache2/vhosts",
          "readOnly": false
        }
      ]
    }
  ]
}